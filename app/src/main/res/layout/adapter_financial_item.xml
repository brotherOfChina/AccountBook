<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/card_back">

    <TextView
        android:id="@+id/tv_input_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="投入日期"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_income_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="收益日期"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/tv_input_date" />

    <TextView
        android:id="@+id/financial_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="股票"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_financial_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="赵鹏军"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/financial_type" />

    <TextView
        android:id="@+id/tv_input_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="投入金额"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/tv_income_date"
       />

    <TextView
        android:id="@+id/tv_income_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="收益利率"
        android:visibility="gone"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@+id/tv_income_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_income_date"
         />

    <TextView
        android:id="@+id/tv_maturity_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="到期收益"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_income_date" />
</android.support.constraint.ConstraintLayout>